#!/usr/bin/env bash

sudo apt install -y \
  build-essential \
  libgomp1 \
  libmpich-dev \
  mpich \
  python3-dev \
  python3-pip \
  python3-venv

rm -rf ~/brainiak
git clone https://github.com/brainiak/brainiak ~/brainiak

pushd ~/brainiak

source ~/venv/bin/activate

pip install -U -r requirements-dev.txt
python setup.py install

deactivate

popd
