#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

sudo apt update
sudo apt install -y \
  libstdc++6 \
  python \
  python-dev \
  python3-dev \
  python-pip \
  python3-pip \
  python3-venv

sudo -H python -m pip install -U pip
sudo -H python3 -m pip install -U pip
sudo -H pip install virtualenv
sudo -H pip3 install virtualenv

