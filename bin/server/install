#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

sudo apt update
sudo apt install -y \
  python \
  python-dev \
  python3-dev \
  python-pip \
  python3-pip

sudo -H python -m pip install -U pip
sudo -H python3 -m pip install -U pip
sudo -H pip install virtualenv
sudo -H pip3 install virtualenv

$DIR/install_brainiak
$DIR/install_ray
