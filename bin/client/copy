#!/usr/bin/env bash

if [[ $# -lt 2 ]]; then
  echo "Usage: copy_dcm INPUT_DIR OUTPUT_DIR FILE_PATTERN"
  exit 1
fi

mkdir -p $2

for i in $(find "$1" -type f | grep "$3" | sort); do
    echo $i
    if [[ $i = *"$3"* ]]; then
        echo Processing $i
        filename=$(basename "$path")
        cp $i $2/$filename
        sleep 1
    fi
done
