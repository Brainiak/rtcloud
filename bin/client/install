#!/usr/bin/env bash

binaries=(
# BrainIAK
llvm
cmake
mpich
python3

# Ray
cmake
pkg-config
automake
autoconf
libtool
boost
wget
)

brew update
brew install ${binaries[@]}
brew upgrade ${binaries[@]}

python3 -m venv venv

source venv/bin/activate

# Install Ray
pushd deps/ray/python
pip install jupyter cython
python setup.py develop
popd

# Install BrainIAK
pushd deps/brainiak
pip install numpy pybind11
pip install -e .
popd

deactivate

